<table class="table table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Pages</th>
        <th>Did you finish the book?</th>
        <th>Remove book from list</th>
      </tr>
    </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%=book.name %></td>
        <td><%=book.author %></td>
        <td><%=book.pages %></td>
        <% if book.finished? %>
        <td class="unfinish-book"><%=link_to 'Mark as Unfinished', unfinish_list_book_path(@list, book), :method => :put, remote: true %></td>
        <% else %>
        <td class="finish-book"><%=link_to 'Mark as Finished', finish_list_book_path(@list, book), :method => :put, remote: true %></td>
        <% end %>
        <td class><%= link_to '|Remove Book|', list_book_path(@list, book), method: :delete, data: { confirm: 'Are you sure?'} %></td>
<% end %>
      </tr>
  </tbody>
</table>